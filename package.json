{
  "name": "custom-theme",
  "version": "1.0.0",
  "type": "module",
  "description": "A modern WordPress theme scaffolded with _s, using Vite, Tailwind CSS, PostCSS & Sass",
  "author": "Glenny Abellana",
  "license": "GPL-2.0-or-later",
  "engines": {
    "node": ">=18 <=20",
    "npm": ">=8"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint:js": "eslint \"src/js/**/*.{js,jsx}\"",
    "lint:css": "stylelint \"src/css/**/*.css\"",
    "format": "prettier --write .",
    "zip": "zip -r ../theme.zip . -x \"node_modules/*\" \"node_modules/**\" \"node_modules\" \"dist/*\" \"dist/**\" \"dist\" \".git/*\" \".git/**\" \".git\" \".DS_Store\"",
    "compile:sass": "sass src/scss:src/css --no-source-map"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.8.0",
    "postcss": "^8.4.20",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^30.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "tailwindcss": "^3.4.7",
    "vite": "^5.0.0"
  }
}